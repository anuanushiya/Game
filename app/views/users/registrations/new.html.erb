<div class="alert alert-dismissible alert-info col-md-6 col-md-offset-3 text-center main-well">

  <h2>Sign up</h2> <br />
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>

    <br>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <br>
    <div class="field">  
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary btn-sm" %>
    </div>
    <br>
  <% end %>

  
</div>