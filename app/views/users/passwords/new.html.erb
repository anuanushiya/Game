<div class="alert alert-dismissible alert-info col-md-6 col-md-offset-3 text-center main-well">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>
</div>