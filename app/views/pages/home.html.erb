<div class="center jumbotron alert-info ">
  <% if user_signed_in? %>
    <h1>Welcome back, <%= current_user.username %></h1>
    <p class="lead">
      Click "Start" button to play to game
    </p>
    <br>
    <div class="row">
      <div class="col-md-12">
        <%= link_to "Start", chats_path, :class => "btn btn-success btn-lg" %>
      </div>
    </div>
  <% else %>
    <h1>Welcome, new user!</h1>
    <p class="lead" >
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>
    <div class="row">
      <div class="col-sm-6">
        <%= link_to "Log In", new_user_session_path, :class => "btn btn-success" %>
      </div>
      <div class="col-sm-6">
        <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>